<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peace.tabbutton.Fragment1" >

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="false"
        android:layout_marginBottom="5dp"
        android:visibility="visible" >
    </SurfaceView>
    
    <RelativeLayout
        android:id="@+id/ratioBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@drawable/_kia_lcd_list_item"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/selectWide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_kia_lcd_list_item" />

            <LinearLayout
                android:id="@+id/llWideMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:paddingLeft="42dp" >

                <TextView
                    android:id="@+id/radioBtnWide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kia_radio_on" />

                <TextView
                    android:id="@+id/txtWideMode"
                    style="@style/font_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/ratio_4_3" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@drawable/_kia_lcd_list_item"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/selectFull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_kia_lcd_list_item" />

            <LinearLayout
                android:id="@+id/llFullMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:paddingLeft="42dp">

                <TextView
                    android:id="@+id/radioBtnFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kia_radio_off" />

                <TextView
                    android:id="@+id/txtFullMode"
                    style="@style/font_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/ratio_16_9" />
            </LinearLayout>
        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />
        
    </LinearLayout>
</FrameLayout>