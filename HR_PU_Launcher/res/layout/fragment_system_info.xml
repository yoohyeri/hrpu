<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peace.tabbutton.Fragment1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/font_26"
                android:id="@+id/txtOSVersion"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/info_os_ver" />

            <TextView
                android:id="@+id/OSVersion"
                style="@style/font_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/font_26"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/info_fw_ver" />

            <TextView
                android:id="@+id/FWVersion"
                style="@style/font_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCasNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/font_26"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/info_cas_no" />

            <TextView
                android:id="@+id/CASNO"
                style="@style/font_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCasID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >



            <TextView
                android:id="@+id/CASID"
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCasBs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >



            <TextView
                android:id="@+id/CASBS"
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="left"
                android:singleLine="true"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDMBLauncher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/info_dmb_ver"
                android:visibility="visible" />

            <TextView
                android:id="@+id/LauncherVer"
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="left"
                android:singleLine="true"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRearCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/info_rear_ver"
                android:visibility="visible" />

            <TextView
                android:id="@+id/Rearver"
                style="@style/font_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            style="@style/font_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/info_map_ver" />
    </LinearLayout>

</FrameLayout>