<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:alpha="0.8"
        android:background="@drawable/dmb_bottom"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnMuteOnOff"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/btn_mute_off" />

            <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnVolDown"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_vol_down" />

            <com.mobilus.hp.launcher.DynamicTextSeekbar
                android:id="@+id/skbPostion"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:max="15"
                android:maxHeight="8px"
                android:progressDrawable="@drawable/volume_seekbar_custom"
                android:thumb="@drawable/vol_thumb"
                android:thumbOffset="3px" />

            <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnVolUp"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/btn_vol_up" />

        
        
