<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <RelativeLayout 
        android:id="@+id/rl_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        
        <TextView style="@style/font_22"
       	    android:id="@+id/tv_noti"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_marginLeft="25dp"
       	    android:layout_marginRight="25dp"
       	    android:text="@string/txt_nand_test_noti"/>
        
        <Button style="@style/font_22"
            android:id="@+id/bt_start"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_below="@id/tv_noti"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_nand_test_start"/>
        
        <Button style="@style/font_22"
            android:id="@+id/bt_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_below="@id/tv_noti"
            android:layout_toRightOf="@id/bt_start"
            android:text="@string/btn_nand_test_back"/>
        
       	<TextView style="@style/font_22"
       	    android:id="@+id/tv_result"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_below="@id/bt_start"
       	    android:gravity="center"/>
    </RelativeLayout>
    <TextView style="@style/font_22"
      	    android:id="@+id/tv_ing"
      	    android:layout_width="fill_parent"
      	    android:layout_height="wrap_content"
      	    android:layout_below="@id/rl_"
      	    android:gravity="center_horizontal"
			/>
</RelativeLayout>
