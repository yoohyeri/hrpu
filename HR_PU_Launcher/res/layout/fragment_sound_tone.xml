<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peace.tabbutton.Fragment1" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        
        <TextView
		    android:id="@+id/txtHigh"
		    style="@style/font_28"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:text="@string/set_high_tone"
		    android:gravity="center"/>
		
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnHighToneDown"
                android:layout_width="74dp"
                android:layout_height="52dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/btn_minus" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.mobilus.hp.launcher.CustomSeekBar
                    android:id="@+id/seekbarHighTone"
                    android:layout_width="@dimen/set_scrollbar_w"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/thumb"
                    android:layout_marginLeft="10dp"/>
                
                <TextView
                    android:id="@+id/txtHightProgress"
                    style="@style/font_26_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:layout_marginTop="5dp" />
                
			</RelativeLayout>
            

           <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnHighToneUp"
                android:layout_width="74dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_plus" />
        </LinearLayout>
        
		<TextView
		    android:id="@+id/txtMedium"
		    style="@style/font_28"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:text="@string/set_medium_tone"
		    android:layout_marginTop="10dp"
		    android:gravity="center"/>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
            android:layout_marginTop="4dp"
		    android:orientation="horizontal" >

		    <com.mobilus.hp.launcher.LongClickEvent
		        android:id="@+id/btnMediumToneDown"
		        android:layout_width="74dp"
                android:layout_height="52dp"
		        android:layout_marginLeft="6dp"
		        android:background="@drawable/btn_minus" />
		    
		    <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.mobilus.hp.launcher.CustomSeekBar
                    android:id="@+id/seekbarMediumTone"
                    android:layout_width="@dimen/set_scrollbar_w"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/thumb"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txtMediumProgress"
                    style="@style/font_26_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

		    <com.mobilus.hp.launcher.LongClickEvent
		        android:id="@+id/btnMediumToneUp"
		        android:layout_width="74dp"
                android:layout_height="52dp"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/btn_plus" />
		</LinearLayout>
        
		<TextView
		    android:id="@+id/txtLow"
		    style="@style/font_28"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:text="@string/set_low_tone"
		    android:layout_marginTop="10dp"
		    android:gravity="center"/>
		
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnLowToneDown"
                android:layout_width="74dp"
                android:layout_height="52dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/btn_minus" />

              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >

                  <com.mobilus.hp.launcher.CustomSeekBar
                      android:id="@+id/seekbarLowTone"
                    android:layout_width="@dimen/set_scrollbar_w"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/thumb"
                    android:layout_marginLeft="10dp"/>

                  <TextView
                      android:id="@+id/txtLowProgress"
                      style="@style/font_26_black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp" />
              </RelativeLayout>

            <com.mobilus.hp.launcher.LongClickEvent
                android:id="@+id/btnLowToneUp"
                android:layout_width="74dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_plus" />
        </LinearLayout>				
        
    </LinearLayout>
</FrameLayout>