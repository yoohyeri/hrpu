<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peace.tabbutton.Fragment1" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/widget_clock_touch_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <!-- Digital -->

        <RelativeLayout
            android:id="@+id/widget_digital"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/digital_bg"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/rl_digital_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/digital_ampm"
                    style="@style/font_56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp" />

                <TextView
                    android:id="@+id/digital_time"
                    style="@style/font_66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="110dp"
                    android:layout_toRightOf="@id/digital_ampm"
                    android:gravity="center" />
            </RelativeLayout>

            <TextView
                android:id="@+id/digital_date"
                style="@style/font_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="335dp" />
        </RelativeLayout>
     

        <!-- Analog -->

        <RelativeLayout
            android:id="@+id/widget_analog"
            android:layout_width="394dp"
            android:layout_height="396dp"
            android:visibility="gone" >

            <com.mobilus.hp.launcher.AnalogClock
                android:layout_width="394dp"
                android:layout_height="396dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="182dp"
                android:layout_marginTop="183dp"
                android:background="@drawable/analog_center_point" />
        </RelativeLayout>

        <!-- None -->

        <RelativeLayout
            android:id="@+id/widget_none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="gone" >

            <TextView
                android:id="@+id/widget_none_current_time"
                style="@style/font_38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>