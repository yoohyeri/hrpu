<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobilus.hp.setting.MainActivity" >

    <RelativeLayout
        android:id="@+id/setting_title_bar"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/status_bar_h" 
        android:layout_height="@dimen/title_bar_h"
        android:background="@drawable/title_bar" >

        <!-- Icon, Channel Name -->
        <LinearLayout
            android:id="@+id/setting_title_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center" >

            <TextView
                android:id="@+id/setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_setting"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_title"
                style="@style/font_28"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/settings" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/setting_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn_back"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"/>
        
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/setting_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#0d0d0d">
   	</FrameLayout>

</LinearLayout>