<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
	
    <include
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title"
        />
    
    <Button 	style="@style/font_40_black" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/buttonScan"
		android:text="@string/str_scan"
		/>
		
    <TextView style="@style/font_22_gray" 
        android:id="@+id/paired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:text="@string/str_paired_devices"/>
	<ListView 
	    android:id="@+id/list_view"
	    android:layout_width="fill_parent"
	    android:layout_height="150dip"
	    android:layout_below="@id/paired"
	    />
	    
	<TextView style="@style/font_40_Red" 
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/str_address"/>
	
	<TextView  style="@style/font_22_gray" 
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_view"
        android:text="@string/str_available_devices"/>
	<ListView 
	    android:id="@+id/list_view2"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/available"
	    android:layout_above="@id/tv_address"
	    />
</RelativeLayout>
