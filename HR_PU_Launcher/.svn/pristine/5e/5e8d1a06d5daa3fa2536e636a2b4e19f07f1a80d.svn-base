	public static byte MakeCRC(ArrayList<Byte> buf) {
		int ret = 0;
	    int sum = 0;
	    if(buf.size() < 3)
	    	return -1;

	    for(int i = 0; i < buf.get(2); i++)
	    	sum = (sum + (byte)buf.get(i+2)) & 0xFF;

	    ret = ~(sum) & 0xFF;
	    return (byte)ret;
	}
	
