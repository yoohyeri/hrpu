<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
	
    <include
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title"
        />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:layout_below="@id/top">
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/dvd_deck">
	        
	        <TextView 
	            android:id="@+id/tv_eject"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="127dp"
	            android:layout_marginTop="105dp"
	            android:background="@drawable/eject_on"
	            android:visibility="invisible"/>
	        
	        <TextView 
	            android:id="@+id/tv_light"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="353dp"
	            android:layout_marginTop="154dp"
	            android:background="@drawable/light_on"
	            android:visibility="invisible"/>
	        
	        <TextView 
	            android:id="@+id/tv_power"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="722dp"
	            android:layout_marginTop="105dp"
	            android:background="@drawable/power_on"
	            android:visibility="invisible"/>
	    </RelativeLayout>
	</RelativeLayout>
 
</RelativeLayout>
