<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
	    
    <include
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title"
        />
    
      <TextView style="@style/font_77"
		        android:id="@+id/tv_count"
		        android:layout_marginTop="300dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
	        />
	         
    
    <RelativeLayout 
        android:id="@+id/rl_change"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:layout_below="@id/top">
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true">
		    <TextView style="@style/font_40"
		        android:id="@+id/tv_play_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerHorizontal="true"/>
		    
		    <Button  style="@style/font_40_black"
		        android:id="@+id/btn_audio"
		        android:layout_width="350dip"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@id/tv_play_name"
		        android:layout_toRightOf="@id/tv_play_name"
		        android:layout_marginLeft="100dip"
		        android:text="@string/str_hp_audio"
		        android:visibility="gone"
		        android:gravity="center" />
		   
		 </RelativeLayout>
     
        <TextView 
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1005dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/arrow_white"/>
        
        <TextView  style="@style/font_40"
            android:id="@+id/tv_arrow_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_arrow"
             android:layout_marginLeft="900dip"
            android:text="@string/str_aux_in_icon"/>
    </RelativeLayout>
    
 
</RelativeLayout>
