<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}" >
	
    <RelativeLayout 
        android:id="@+id/rl_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true" >
        <TextView   style="@style/font_45"
	        android:id="@+id/tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""/>
	    
        <TextView   style="@style/font_45"
	        android:id="@+id/bt_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tv_title"
	        android:layout_marginLeft="40dip"
	        android:text="@string/str_result"/>
        
	    <Button   style="@style/font_40_black"
	        android:id="@+id/bt_result_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/bt_result"
	        android:text="@string/str_ok"/>
    </RelativeLayout>
    <Button   style="@style/font_40_black"
	        android:id="@+id/bt_result_ng"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/rl_common"
	        android:layout_marginLeft="80dip"
	        android:text="@string/str_ng"/>
    
     <TextView  style="@style/font_40"
	       android:id="@+id/tv_body"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/rl_common"/> 
	 <TextView  style="@style/font_40_Red"
	       android:id="@+id/tv_body1"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/tv_body"
	       android:visibility="gone"/>
	 <TextView  style="@style/font_40_Red"
	       android:id="@+id/tv_body2"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/tv_body1"
	       android:visibility="gone"/>
	  
     
</RelativeLayout>
