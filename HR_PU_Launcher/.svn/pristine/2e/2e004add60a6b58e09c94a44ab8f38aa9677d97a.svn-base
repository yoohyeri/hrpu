<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <!-- Year -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnYearUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtYear"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/year" />

            <TextView
                android:id="@+id/txtCurrentYear"
                style="@style/font_27"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="18" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnYearDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>

    <!-- Month -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnMonthUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtMonth"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/month" />

            <TextView
                android:id="@+id/txtCurrentMonth"
                style="@style/font_30"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="8" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnMonthDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>
    
    <!-- Day -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnDayUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtDay"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/day" />

            <TextView
                android:id="@+id/txtCurrentDay"
                style="@style/font_30"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="14" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnDayDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>
    
    
    <!-- Hour -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnHourUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtHour"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/hour" />

            <TextView
                android:id="@+id/txtCurrentHour"
                style="@style/font_30"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="18" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnHourDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>

    <!-- Minute -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnMinuteUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtMinute"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/minute" />

            <TextView
                android:id="@+id/txtCurrentMinute"
                style="@style/font_30"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="3" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnMinutehDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>
    
    <!-- AM/PM -->
    <LinearLayout
        android:id="@+id/ampmLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical" >

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnAMPMUp"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_input"
            android:orientation="vertical" >

            <TextView
                style="@style/font_16"
                android:id="@+id/txtAMPM"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="@string/am_pm" />

            <TextView
                android:id="@+id/txtCurrentAMPM"
                style="@style/font_30"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="@string/home_time_am" />
        </LinearLayout>

        <com.mobilus.hp.launcher.LongClickEvent
            android:id="@+id/btnAMPMDown"
            android:layout_width="@dimen/btn_time_w"
            android:layout_height="@dimen/btn_time_h"
            android:background="@drawable/_kia_btn_down" />
    </LinearLayout>    
    
    
</LinearLayout>