	public static byte makeCRC(ArrayList<Byte> packet) {
		int ret = 0;
		int sum = 0;
		
		int length = packet.get(2);
		for(int i=2; i<length+3; i++) {
			sum = (sum + (byte)packet.get(i)) & 0xFF;
		}
		
		ret = ~(sum)&0xFF;
		return (byte)ret;
	}
	
