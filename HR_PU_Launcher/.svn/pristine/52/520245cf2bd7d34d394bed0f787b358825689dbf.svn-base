	};
	
	@Override
	public void onDVDKeyState(String key, String action) {
		// TODO Auto-generated method stub
		mKeyName = key;
    	mKeyState = action;
    	mUpdateHandler.postDelayed(mUpdateRunnable, 1);
	}
