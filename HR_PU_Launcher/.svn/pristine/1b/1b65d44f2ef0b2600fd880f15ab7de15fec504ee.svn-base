<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PowerKeyActivity" >
    
    <RelativeLayout 
        android:id="@+id/rl_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </RelativeLayout>
    
    <include
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title"
        />
    
    <TextView 
        android:id="@+id/tv_hideen1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="1"
        android:background="#00FF00"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/tv_hideen2"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="2"
        android:background="#00FF00"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/tv_hideen3"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="3"
        android:background="#00FF00"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/tv_hideen4"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="4"
        android:background="#00FF00"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/tv_hideen5"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="5"
        android:background="#00FF00"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    
    <TextView style="@style/font_77_black"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
        
 </RelativeLayout>
